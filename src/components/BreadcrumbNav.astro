---
import {
  Breadcrumb,
  BreadcrumbList,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbSeparator,
} from "@/components/ui/breadcrumb";

type BreadcrumbItem = {
  label: string;
  href: string;
};

const { items } = Astro.props as { items: BreadcrumbItem[] };
---

<Breadcrumb>
  <BreadcrumbList>
    {
      items.map((item, index) => (
        <>
          <BreadcrumbItem>
            <BreadcrumbLink
              href={item.href}
              aria-current={index === items.length - 1 ? "page" : undefined}
            >
              {item.label}
            </BreadcrumbLink>
          </BreadcrumbItem>
          {index < items.length - 1 && <BreadcrumbSeparator />}
        </>
      ))
    }
  </BreadcrumbList>
</Breadcrumb>
