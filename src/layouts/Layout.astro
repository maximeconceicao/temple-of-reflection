---
import AppShell from "@/components/AppShell";
import { GardenTheme } from "@/constants";
import { getCollection } from "astro:content";
import "../styles/global.css";
const { title } = Astro.props;

const allEntries = await getCollection("garden");

const categories = Object.values(GardenTheme).map((theme) => ({
  theme,
  count: allEntries.filter((entry) => entry.data.theme === theme).length,
}));

categories.sort((a, b) => b.count - a.count);
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <main class="flex min-h-screen">
      <AppShell client:load categories={categories}>
        <slot />
      </AppShell>
    </main>
  </body>
</html>
